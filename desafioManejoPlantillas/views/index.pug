html
  head
    title=title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
  body(class="bg-light")
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
      div(class="container-fluid")
        div(class="collapse navbar-collapse" id="navbarNav")
          ul(class="navbar-nav")
            li(class="nav-item")
              a(class="nav-link active" aria-current="page" href="/")= "Formulario"
            li(class="nav-item")
              a(class="nav-link" href="/productos")="Productos"
    main 
      div(class="container")
        div(class="py-5 text-center")
          h1=title
        form(action="/productos" method="POST" class="w-50 mx-auto")
        
          h2="Ingrese un producto"

          div(class="row g-3")

            div(class="col-sm-12")
              label(for="productName" class="form-label")="Nombre del producto"
              input(type="text" class="form-control" id="productName" name="nombre")

            div(class="col-sm-12")
              label(for="precio" class="form-label")="Precio"
              input(type="text" class="form-control" id="precio"  name="precio")

            div(class="col-sm-12")
              label(for="foto" class="form-label")="Foto URL"
              input(type="text" class="form-control" id="foto"  name="foto")

            hr(class="my-4")

            button(class="w-100 btn btn-primary btn-lg")="Enviar datos"

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
