html
  head
    title=title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
  body(class="bg-light")
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
      div(class="container-fluid")
        div(class="collapse navbar-collapse" id="navbarNav")
          ul(class="navbar-nav")
            li(class="nav-item")
              a(class="nav-link" aria-current="page" href="/")= "Formulario"
            li(class="nav-item")
              a(class="nav-link active" href="/productos")="Productos"
    main 
      div(class="container")
        div(class="w-50 mx-auto")
          if productos.length > 0
            table(class="table table-dark table-striped table-bordered")
              thead(class="text-center")
                th="Nombre"
                th="Precio"
                th="Imagen"
              tbody
                each producto in productos
                  tr(class="text-center")
                    td=producto.nombre
                    td=producto.precio
                    td
                      img(src=producto.foto alt=producto.nombre width="30" height="24")
          else 
            h3(class="text-center")= "No se encontraron productos"
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")